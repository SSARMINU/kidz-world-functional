function updateCart() {
  let cart = 0;
  for (index = 0; index < items.length; index++) {
    cart = cart + items[index].quantity;
  }
  cartValue.innerHTML = cart;
}

for (let i = 0; i < addButtons.length; i++) {
  addButtons[i].onclick = (e) => {
    items[i].quantity++;
    updateCart();
  };
}

var finalDollars = 0;
var finalCents = 0;

function updatePrice() {
  let totalPriceInCents = 0;

  for (index = 0; index < items.length; index++) {
    totalPriceInCents =
      totalPriceInCents +
      items[index].quantity * (items[index].dollars * 100 + items[index].cents);
  }
  finalDollars = Math.floor(totalPriceInCents / 100);
  finalCents = totalPriceInCents % 100;
}

document.getElementById('cart').addEventListener('click', function() {
  // Construct the message with order details
  let message = "Order Details:\n";
  for (let index = 0; index < items.length; index++) {
      if (items[index].quantity != 0) {
          message += `Item name: ${items[index].name} - Quantity: ${items[index].quantity}\n`;
      }
  }
  
  // Calculate total amount
  const totalAmount = calculateTotalAmount();
  
  // Add total amount to the message
  message += `Total Amount: $ ${totalAmount} `;

  // Encode message for URL
  const encodedMessage = encodeURIComponent(message);

  // Construct the WhatsApp URL with the encoded message
  const whatsappUrl = `https://wa.me/?text=${encodedMessage}`;

  // Open WhatsApp in a new tab/window with the pre-filled message
  window.open(whatsappUrl, '_blank');
});
function calculateTotalAmount() {
  let totalAmount = 0;
  let total=0;
  // Iterate over the items in the cart
  for (let index = 0; index < items.length; index++) {
      // Calculate the subtotal for each item (quantity * price)
      const subtotal = items[index].quantity * (items[index].dollars * 100 + items[index].cents);
      
      // Add the subtotal to the total amount
      totalAmount += subtotal;
  }
  total=Math.floor(totalAmount/100);
  // Return the total amount
  return total;
};